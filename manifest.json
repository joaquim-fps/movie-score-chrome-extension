{
    "name": "Movie Score",
    "description": "Gets scores from popular rating sites like IMDB and Rotten Tomatoes for movies in popular streaming services, such as Netflix.",
    "version": "1.0.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://*.netflix.com/*"],
            "js": ["./content.js", "./api.js", "./netflix/variables.js"],
            "css": ["./movie-score.css"]
        },
        {
            "matches": ["https://*.primevideo.com/*"],
            "js": ["./content.js", "./api.js", "./prime-video/variables.js"],
            "css": ["./movie-score.css"]
        }
    ]
}
